('Lando', 'Norris', 4, 4, 'Reino Unido'),
('Oscar', 'Piastri', 81, 4, 'Australia');

-- ================================
-- TABLA: circuitos
-- ================================
CREATE TABLE circuitos (
    id INT AUTO_INCREMENT PRIMARY KEY,
    nombre VARCHAR(100) NOT NULL,
    pais VARCHAR(50) NOT NULL,
    ciudad VARCHAR(100),
    longitud_km DECIMAL(5,3),
    vueltas INT,
    imagen_url VARCHAR(255)
);

INSERT INTO circuitos (nombre, pais, ciudad, longitud_km, vueltas) VALUES 
('Bahrain International Circuit', 'Bahréin', 'Sakhir', 5.412, 57),
('Jeddah Corniche Circuit', 'Arabia Saudita', 'Jeddah', 6.174, 50),
('Albert Park Circuit', 'Australia', 'Melbourne', 5.278, 58),
('Baku City Circuit', 'Azerbaiyán', 'Bakú', 6.003, 51),
('Circuit de Monaco', 'Mónaco', 'Montecarlo', 3.337, 78),
('Circuit de Barcelona-Catalunya', 'España', 'Barcelona', 4.675, 66),
('Circuit Gilles Villeneuve', 'Canadá', 'Montreal', 4.361, 70),
('Red Bull Ring', 'Austria', 'Spielberg', 4.318, 71),
('Silverstone Circuit', 'Reino Unido', 'Silverstone', 5.891, 52),
('Hungaroring', 'Hungría', 'Budapest', 4.381, 70);

-- ================================
-- TABLA: grandes_premios
-- ================================
CREATE TABLE grandes_premios (
    id INT AUTO_INCREMENT PRIMARY KEY,
    temporada_id INT NOT NULL,
    circuito_id INT NOT NULL,
    nombre VARCHAR(100) NOT NULL,
    fecha DATE NOT NULL,
    ronda INT NOT NULL,
    FOREIGN KEY (temporada_id) REFERENCES temporadas(id) ON DELETE CASCADE,
    FOREIGN KEY (circuito_id) REFERENCES circuitos(id) ON DELETE CASCADE
);

-- Ejemplo de datos para 2024
INSERT INTO grandes_premios (temporada_id, circuito_id, nombre, fecha, ronda) VALUES 
(1, 1, 'Gran Premio de Bahréin', '2024-03-02', 1),
(1, 2, 'Gran Premio de Arabia Saudita', '2024-03-09', 2),
(1, 3, 'Gran Premio de Australia', '2024-03-24', 3),
(1, 4, 'Gran Premio de Azerbaiyán', '2024-04-28', 4),
(1, 5, 'Gran Premio de Mónaco', '2024-05-26', 5);

-- ================================
-- TABLA: resultados_carreras
-- ================================
CREATE TABLE resultados_carreras (
    id INT AUTO_INCREMENT PRIMARY KEY,
    gran_premio_id INT NOT NULL,
    piloto_id INT NOT NULL,
    posicion INT NOT NULL,
    puntos DECIMAL(5,2) DEFAULT 0,
    tiempo VARCHAR(50),
    vueltas_completadas INT,
    estado ENUM('Finalizado', 'Retirado', 'Descalificado', 'No Clasificado') DEFAULT 'Finalizado',
    FOREIGN KEY (gran_premio_id) REFERENCES grandes_premios(id) ON DELETE CASCADE,
    FOREIGN KEY (piloto_id) REFERENCES pilotos(id) ON DELETE CASCADE
);

-- Datos ejemplo (Gran Premio Bahréin 2024)
INSERT INTO resultados_carreras (gran_premio_id, piloto_id, posicion, puntos, vueltas_completadas) VALUES 
(1, 1, 1, 25, 57),
(1, 2, 2, 18, 57),
(1, 3, 3, 15, 57),
(1, 5, 4, 12, 57),
(1, 7, 5, 10, 57);

-- ================================
-- TABLA: clasificacion_pilotos
-- ================================
CREATE TABLE clasificacion_pilotos (
    id INT AUTO_INCREMENT PRIMARY KEY,
    temporada_id INT NOT NULL,
    piloto_id INT NOT NULL,
    puntos_totales DECIMAL(6,2) DEFAULT 0,
    posicion INT,
    FOREIGN KEY (temporada_id) REFERENCES temporadas(id) ON DELETE CASCADE,
    FOREIGN KEY (piloto_id) REFERENCES pilotos(id) ON DELETE CASCADE,
    UNIQUE KEY unique_temporada_piloto (temporada_id, piloto_id)
);

-- ================================
-- TABLA: clasificacion_constructores
-- ================================
CREATE TABLE clasificacion_constructores (
    id INT AUTO_INCREMENT PRIMARY KEY,
    temporada_id INT NOT NULL,
    equipo_id INT NOT NULL,
    puntos_totales DECIMAL(6,2) DEFAULT 0,
    posicion INT,
    FOREIGN KEY (temporada_id) REFERENCES temporadas(id) ON DELETE CASCADE,
    FOREIGN KEY (equipo_id) REFERENCES equipos(id) ON DELETE CASCADE,
    UNIQUE KEY unique_temporada_equipo (temporada_id, equipo_id)
);

-- ================================
-- TABLA: productos_merchandising
-- ================================
CREATE TABLE productos_merchandising (
    id INT AUTO_INCREMENT PRIMARY KEY,
    nombre VARCHAR(200) NOT NULL,
    descripcion TEXT,
    precio DECIMAL(10,2) NOT NULL,
    equipo_id INT,
    categoria ENUM('Camiseta', 'Gorra', 'Chaqueta', 'Accesorio', 'Coleccionable', 'Otro') NOT NULL,
    stock INT DEFAULT 0,
    imagen_url VARCHAR(255),
    destacado BOOLEAN DEFAULT FALSE,
    fecha_agregado TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    FOREIGN KEY (equipo_id) REFERENCES equipos(id) ON DELETE SET NULL
);

INSERT INTO productos_merchandising (nombre, descripcion, precio, equipo_id, categoria, stock, destacado) VALUES 
('Camiseta Red Bull Racing 2024', 'Camiseta oficial del equipo Red Bull Racing temporada 2024', 79.99, 1, 'Camiseta', 150, TRUE),
