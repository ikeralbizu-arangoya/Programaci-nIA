-- ================================
-- TABLA: temporadas
-- ================================
CREATE TABLE temporadas (
    id INT AUTO_INCREMENT PRIMARY KEY,
    año INT NOT NULL UNIQUE,
    nombre VARCHAR(100) NOT NULL,
    descripcion TEXT,
    activa BOOLEAN DEFAULT FALSE
);

INSERT INTO temporadas (año, nombre, activa) VALUES 
(2024, 'Temporada 2024', TRUE),
(2023, 'Temporada 2023', FALSE),
(2022, 'Temporada 2022', FALSE);

-- ================================
-- TABLA: equipos
-- ================================
CREATE TABLE equipos (
    id INT AUTO_INCREMENT PRIMARY KEY,
    nombre VARCHAR(100) NOT NULL,
    color_principal VARCHAR(7) NOT NULL,
    color_secundario VARCHAR(7),
    logo_url VARCHAR(255),
    pais VARCHAR(50)
);

INSERT INTO equipos (nombre, color_principal, color_secundario, pais) VALUES 
