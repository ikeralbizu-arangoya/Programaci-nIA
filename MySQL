('Gorra Aston Martin', 'Gorra Aston Martin F1 Team', 44.99, 5, 'Gorra', 180, FALSE);

-- ================================
-- TABLA: tipos_entradas
-- ================================
CREATE TABLE tipos_entradas (
    id INT AUTO_INCREMENT PRIMARY KEY,
    nombre VARCHAR(100) NOT NULL,
    descripcion TEXT,
    precio DECIMAL(10,2) NOT NULL,
    beneficios TEXT,
    color VARCHAR(7) DEFAULT '#000000'
);

INSERT INTO tipos_entradas (nombre, descripcion, precio, beneficios, color) VALUES 
