('Weekend Pass', 'Acceso a todo el fin de semana', 399.99, 'Viernes, Sábado y Domingo|Entrenamientos libres|Clasificación|Carrera|Gradas generales', '#38A169');

-- ================================
-- TABLA: entradas_disponibles
-- ================================
CREATE TABLE entradas_disponibles (
    id INT AUTO_INCREMENT PRIMARY KEY,
    gran_premio_id INT NOT NULL,
    tipo_entrada_id INT NOT NULL,
    cantidad_disponible INT NOT NULL,
    fecha_venta_inicio DATE,
    fecha_venta_fin DATE,
    activa BOOLEAN DEFAULT TRUE,
    FOREIGN KEY (gran_premio_id) REFERENCES grandes_premios(id) ON DELETE CASCADE,
    FOREIGN KEY (tipo_entrada_id) REFERENCES tipos_entradas(id) ON DELETE CASCADE
);

-- ================================
-- TABLA: pedidos_entradas
-- ================================
CREATE TABLE pedidos_entradas (
    id INT AUTO_INCREMENT PRIMARY KEY,
    nombre_cliente VARCHAR(100) NOT NULL,
    email_cliente VARCHAR(100) NOT NULL,
    telefono VARCHAR(20),
    entrada_disponible_id INT NOT NULL,
    cantidad INT NOT NULL,
    precio_total DECIMAL(10,2) NOT NULL,
    estado ENUM('Pendiente', 'Confirmado', 'Cancelado') DEFAULT 'Pendiente',
    fecha_pedido TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    FOREIGN KEY (entrada_disponible_id) REFERENCES entradas_disponibles(id) ON DELETE CASCADE
);

-- ================================
-- TABLA: pedidos_merchandising
-- ================================
CREATE TABLE pedidos_merchandising (
    id INT AUTO_INCREMENT PRIMARY KEY,
    nombre_cliente VARCHAR(100) NOT NULL,
    email_cliente VARCHAR(100) NOT NULL,
    direccion_envio TEXT NOT NULL,
    telefono VARCHAR(20),
    total DECIMAL(10,2) NOT NULL,
    estado ENUM('Pendiente', 'Procesando', 'Enviado', 'Entregado', 'Cancelado') DEFAULT 'Pendiente',
    fecha_pedido TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);

-- ================================
-- TABLA: detalle_pedidos_merchandising
-- ================================
CREATE TABLE detalle_pedidos_merchandising (
    id INT AUTO_INCREMENT PRIMARY KEY,
    pedido_id INT NOT NULL,
    producto_id INT NOT NULL,
    cantidad INT NOT NULL,
    precio_unitario DECIMAL(10,2) NOT NULL,
    FOREIGN KEY (pedido_id) REFERENCES pedidos_merchandising(id) ON DELETE CASCADE,
    FOREIGN KEY (producto_id) REFERENCES productos_merchandising(id) ON DELETE CASCADE
);

-- ================================
-- TABLA: noticias
-- ================================
CREATE TABLE noticias (
    id INT AUTO_INCREMENT PRIMARY KEY,
    titulo VARCHAR(200) NOT NULL,
    contenido TEXT NOT NULL,
    resumen VARCHAR(500),
    imagen_url VARCHAR(255),
    autor VARCHAR(100),
    categoria ENUM('Carrera', 'Equipo', 'Piloto', 'Técnica', 'Rumor', 'Otros') DEFAULT 'Otros',
    destacada BOOLEAN DEFAULT FALSE,
    fecha_publicacion TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    vistas INT DEFAULT 0
);

